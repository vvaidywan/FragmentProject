<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="personal_details_category"
        app:title="Personal Details">

        <EditTextPreference
            app:key="name"
            app:title="Your name"
            app:summary="Click to edit"
            app:isPreferenceVisible="true"/>

        <EditTextPreference
            app:key="email"
            app:title="Your email"
            app:summary="Click to edit"
            app:isPreferenceVisible="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>

        <SwitchPreferenceCompat
            app:key="led"
            app:title="Enable message led"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>

    </PreferenceCategory>


</PreferenceScreen>

